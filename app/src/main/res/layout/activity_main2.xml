<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <EditText
            android:id="@+id/search_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Ayat Number"
            android:inputType="number" />

        <Button
            android:id="@+id/goToAyatButton"
            android:layout_width="141dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/search_edittext"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-140dp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="-46dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/search_edittext"
            android:backgroundTint="#9C27B0"
            android:text="Go to Ayat" />

        <TextView
            android:id="@+id/surah_content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goToAyatButton"
            android:layout_alignStart="@+id/search_edittext"
            android:layout_alignEnd="@+id/search_edittext"
            android:layout_marginStart="0dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="0dp"
            android:textSize="18sp"
            tools:text="Sample Surah Content" />

    </RelativeLayout>

</ScrollView>
